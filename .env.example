# Gmail API credentials
GMAIL_CLIENT_ID=your_gmail_client_id
GMAIL_CLIENT_SECRET=your_gmail_client_secret

# Google Sheets API credentials  
SHEETS_CLIENT_ID=your_sheets_client_id
SHEETS_CLIENT_SECRET=your_sheets_client_secret

# Gemini API key (for email parsing)
GEMINI_API_KEY=your_gemini_api_key

# Email configuration for notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_ADDRESS=your_email@gmail.com
EMAIL_PASSWORD=your_app_password

# Google Sheets configuration
SPREADSHEET_ID=your_google_sheets_id
WORKSHEET_NAME=Job Applications

# Email addresses to notify for interviews/assessments
NOTIFICATION_EMAILS=email1@example.com,email2@example.com

# Monitoring Configuration
# How many emails to check on first run (when no emails have been processed before)
FIRST_RUN_EMAIL_COUNT=50
# How many emails to check during ongoing monitoring (every 15 minutes)
ONGOING_EMAIL_COUNT=10
# How often to check for new emails (in minutes)
POLLING_INTERVAL_MINUTES=15
# How many days back to look for emails
DAYS_TO_LOOK_BACK=1
